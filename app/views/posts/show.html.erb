<div class="row" xmlns="http://www.w3.org/1999/html">
    <div class="span3 offset5">
  <h1><%= @post.title %></h1>
    </div>
</div>

<p>
  <div class="row">
    <div class="span3 offset5">
      <pre>
      <%= @post.text %>
      </pre>
    </div>
  </div>
</p>
<div class="span3 offset5">
<div class="btm-proup">

    <button class="btn"><%= link_to 'Back', :action => :index %></button>
    <% if can? :edit, Post %>
        <button class="btn"><%= link_to 'Edit', :action => :edit, :id => @post.id %></button>
    <% end %>
      </div>
</div>