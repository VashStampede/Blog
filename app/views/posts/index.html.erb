<div class="row">
  <div class="span3 offset5">
    <h1>Listing posts</h1>
  </div>

</div>
<div class="row-fluid">
<% @posts.each do |post| %>

<div class="row-fluid">
  <div class="span2 offset4">
    <h5><%= Post.find(post.id).user.name %> <%= Post.find(post.id).user.surname %></h5>
    <h3><%= post.title  %></h3>
  </div>
    <div class="span3">
        <div class="btn-group">
          <% if can? :read, Post %>
          <%= link_to 'Show',post_path(post), :action => :show, :id => post.id, :class=>"btn btn-primary"%>
          <% end %>
          <% if post.user_id == current_user.id %>
          <%= link_to 'Edit',edit_post_path(post), :action => :edit, :id => post.id,  :class=>"btn btn-primary"%>
          <% end %>
          <% if post.user_id == current_user.id%>
              <%= link_to 'Destroy', { :action => :destroy, :id =>post.id}, :method => :delete, :confirm => 'Are you sure?', :class=>"btn btn-primary" %>
          <% end %>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span5 offset4">
        <pre>
     <%= post.text %>
        </pre>
    </div>
</div>
<% end %>
</div>


