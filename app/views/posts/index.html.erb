<div class="row">
  <div class="span3 offset4">
    <h1>Listing posts</h1>
  </div>
  <% if can? :create, Post %>
  <div class="btn">
    <%= link_to 'New post', :action => :new %>
  </div>
      <% end %>
</div>
<div class="row-fluid">
<% @posts.each do |post| %>

<div class="row-fluid">
  <div class="span2 offset4">
    <h3>Post <%= post.id %></h3>
  </div>
    <div class="span3">
        <div class="btn-group">
          <% if can? :read, Post %>
            <button class="btn"><%= link_to 'Show', :action => :show, :id => post.id %></button>
          <% end %>
          <% if can? :update, Post %>
            <button class="btn"><%= link_to 'Edit', :action => :edit, :id => post.id %></button>
          <% end %>
            <% if can? :destroy, Post %>
          <button class="btn"><%= link_to 'Destroy', { :action => :destroy, :id =>post.id }, :method => :delete, :confirm => 'Are you sure?' %></button>
              <% end %>
        </div>
    </div>
</div>


<div class="row-fluid">
    <div class="span5 offset4">
        <pre>
    <strong>Title :</strong> <%= post.title %>
    <strong>Text :</strong> <%= post.text %>
        </pre>
    </div>
</div>
<% end %>
</div>


